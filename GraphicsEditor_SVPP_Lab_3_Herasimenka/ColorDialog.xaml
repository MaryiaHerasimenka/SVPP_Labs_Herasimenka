<Window x:Class="GraphicsEditor_SVPP_Lab_3_Herasimenka.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsEditor_SVPP_Lab_3_Herasimenka"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Color Picker" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Select Color:" Margin="0,0,0,10"/>
        <xctk:ColorPicker x:Name="ColorPicker" SelectedColor="{Binding Path=BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="OK" Click="ok_Button_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
