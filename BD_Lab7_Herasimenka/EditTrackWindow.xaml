<Window x:Class="BD_Lab7_Herasimenka.EditTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Track" Height="300" Width="400">
    <Grid x:Name="grid">
        <StackPanel>
            <Label Content="Track Title:"/>
            <TextBox Text="{Binding TrackTitle}"/>
            <Label Content="Track Duration:"/>
            <TextBox Text="{Binding TrackDuration}"/>
            <Label Content="Artist Name:"/>
            <TextBox Text="{Binding ArtistName}"/>
            <Label Content="Album Title:"/>
            <TextBox Text="{Binding AlbumTitle}"/>
            <Button Margin="50" Content="Save" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
